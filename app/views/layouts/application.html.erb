          </button>
      
          <div class="collapse navbar-collapse opacity-75" id="navbarNav">
            <!-- Escritorio -->
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link active fs-4 text-white pe-3" %>
